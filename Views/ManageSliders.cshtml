@using Nop.Web.Framework;
@{
    Layout = "_AdminLayout.cshtml";
}

<div id="sliders"></div>
<script>
        $(document).ready(function () {
            $("#sliders").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("ListSliders", "Slider"))",
                            type: "POST",
                            dataType: "json"
                        },
                        update: {
                            url: "@Html.Raw(Url.Action("UpdateSlider", "Slider"))",
                            type: "POST",
                            dataType: "json"
                        },
                        destroy: {
                            url: "@Html.Raw(Url.Action("DeleteSlider", "Slider"))",
                            type: "POST",
                            dataType: "json"
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "Total",
                        errors: "Errors",
                        model: {
                            id: "Id",
                            fields: {
                                rId: { editable: true, type: "number" },
                                SliderName: { editable: false, type: "string" },
                                IsActive: { editable: true, type: "boolean" },
                                PauseOnHover: { editable: true, type: "boolean" },
                                Interval: { editable: true, type: "number" }
                            }
                        }
                    },
                    requestEnd: function (e) {
                        if (e.type == "update") {
                            this.read();
                        }
                    },
                    error: function (e) {
                        display_kendoui_grid_error(e);
                        // Cancel the changes
                        this.cancelChanges();
                    },
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                pageable: {
                    refresh: true,
                    numeric: false,
                    previousNext: false,
                    info: false
                },
                editable: {
                    confirmation: true,
                    mode: "inline"
                },
                scrollable: false,
                columns: [ {
                    field: "SliderName",
                    title: "SliderName",
                    template: '<a href="/Slider/CreateUpdateSlider?Id=#=Id#">#=SliderName#</a>',
                    width: 150
                }, {
                    field: "IsActive",
                    title: "Is Active",
                    width: 150
                }, {
                    field: "Interval",
                    title: "Interval",
                    width: 150
                }, {
                    field: "PauseOnHover",
                    title: "PauseOnHover",
                    width: 150
                },  {
                    command: [{
                        name: "edit",
                        text: "@T("Admin.Common.Edit")"
                    }, {
                        name: "destroy",
                        text: "@T("Admin.Common.Delete")"
                    }],
                    width: 200
                }]
            });
        });
</script>


